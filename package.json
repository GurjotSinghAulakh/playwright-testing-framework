{
  "name": "playwright-testing-framework",
  "private": true,
  "author": "Gurjot Singh Aulakh",
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter ./packages/** run build",
    "test:api": "pnpm run build && pnpm -C apps/api-tests test",
    "test:e2e": "pnpm run build && pnpm -C apps/e2e-tests test",
    "typecheck": "pnpm -r --filter ./apps/** --filter ./packages/** run typecheck",
    "lint": "pnpm -r --filter ./apps/** --filter ./packages/** run lint",
    "format": "prettier . --check",
    "format:fix": "prettier . --write"
  },
  "devDependencies": {
    "@types/node": "^20.17.6",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
