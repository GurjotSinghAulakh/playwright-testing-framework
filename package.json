{
  "name": "playwright-testing-framework",
  "private": true,
  "author": "Gurjot Singh Aulakh",
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter \"./packages/**\" --if-present run build",
    "test": "pnpm test:api && pnpm test:e2e",
    "test:api": "pnpm run build && pnpm -C apps/api-tests test",
    "test:e2e": "pnpm run build && pnpm -C apps/e2e-tests test",
    "test:smoke": "pnpm -C apps/api-tests test -- --grep @smoke --pass-with-no-tests && pnpm -C apps/e2e-tests test -- --grep @smoke --pass-with-no-tests",
    "report:api": "pnpm -C apps/api-tests exec playwright show-report",
    "report:e2e": "pnpm -C apps/e2e-tests exec playwright show-report",
    "typecheck": "pnpm -r --filter \"./apps/**\" --filter \"./packages/**\" run typecheck",
    "lint": "pnpm -r --filter \"./apps/**\" --filter \"./packages/**\" run lint",
    "lint:fix": "pnpm -r --filter \"./apps/**\" --filter \"./packages/**\" run lint -- --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-playwright": "^1.8.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
